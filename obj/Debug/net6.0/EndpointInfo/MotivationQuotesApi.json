{
  "openapi": "3.0.1",
  "info": {
    "title": "MotivationQuotesApi",
    "version": "1.0"
  },
  "paths": {
    "/quotes": {
      "get": {
        "tags": [
          "Quotes"
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/quotes/random": {
      "get": {
        "tags": [
          "Quotes"
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/quotes/favorites/add": {
      "post": {
        "tags": [
          "Quotes"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Quote"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/Quote"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/Quote"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/quotes/favorites/list": {
      "get": {
        "tags": [
          "Quotes"
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/quotes/favorites/delete/{id}": {
      "delete": {
        "tags": [
          "Quotes"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/quotes/history": {
      "get": {
        "tags": [
          "Quotes"
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/quotes/history/clear": {
      "delete": {
        "tags": [
          "Quotes"
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/quotes/image": {
      "get": {
        "tags": [
          "Quotes"
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/quotes/top": {
      "get": {
        "tags": [
          "Quotes"
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/quotes/daily": {
      "post": {
        "tags": [
          "Quotes"
        ],
        "parameters": [
          {
            "name": "chatId",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          },
          {
            "name": "time",
            "in": "query",
            "schema": {
              "$ref": "#/components/schemas/TimeSpan"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/quotes/unsubscribe": {
      "post": {
        "tags": [
          "Quotes"
        ],
        "parameters": [
          {
            "name": "chatId",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/quotes/daily/send": {
      "post": {
        "tags": [
          "Quotes"
        ],
        "parameters": [
          {
            "name": "time",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/quotes/rating/{quoteId}": {
      "get": {
        "tags": [
          "Quotes"
        ],
        "parameters": [
          {
            "name": "quoteId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Quote": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "text": {
            "type": "string",
            "nullable": true
          },
          "author": {
            "type": "string",
            "nullable": true
          },
          "isFavorite": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      },
      "TimeSpan": {
        "type": "object",
        "properties": {
          "ticks": {
            "type": "integer",
            "format": "int64"
          },
          "days": {
            "type": "integer",
            "format": "int32"
          },
          "hours": {
            "type": "integer",
            "format": "int32"
          },
          "milliseconds": {
            "type": "integer",
            "format": "int32"
          },
          "minutes": {
            "type": "integer",
            "format": "int32"
          },
          "seconds": {
            "type": "integer",
            "format": "int32"
          },
          "totalDays": {
            "type": "number",
            "format": "double",
            "readOnly": true
          },
          "totalHours": {
            "type": "number",
            "format": "double",
            "readOnly": true
          },
          "totalMilliseconds": {
            "type": "number",
            "format": "double",
            "readOnly": true
          },
          "totalMinutes": {
            "type": "number",
            "format": "double",
            "readOnly": true
          },
          "totalSeconds": {
            "type": "number",
            "format": "double",
            "readOnly": true
          }
        },
        "additionalProperties": false
      }
    }
  }
}